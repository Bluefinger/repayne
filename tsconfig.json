{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": false,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2019",
    "removeComments": true,
    "rootDir": "./",
    "keyofStringsOnly": true,
    "types": ["highlight.js"]
  },
  "include": ["./src/**/*"],
  "exclude": ["./node_modules/**/*", "./static/**/*"]
}
